@model MovieViewModel

<h1>Edit Movie</h1>

@foreach (var x in Model.Movie) //setting the value to what they passed in earlier and then updating their responses
{
<form asp-action="EditMovie" method="post">
    <div>
        <label asp-for="MovieForm.Category">Category:</label>
        <input asp-for="MovieForm.Category" value="@x.Category" required />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Title">Title:</label>
        <input asp-for="MovieForm.Title" value="@x.Title" required />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Year">Year:</label>
        <input asp-for="MovieForm.Year" value="@x.Year" required />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.DirectorFirst">Director First Name:</label>
        <input asp-for="MovieForm.DirectorFirst" value="@x.DirectorFirst" required />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.DirectorLast">Director Last Name:</label>
        <input asp-for="MovieForm.DirectorLast" value="@x.DirectorLast" required />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Rating">Rating:</label>
        <select asp-for="MovieForm.Rating" value="@x.Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Edited">Edited:</label>
        <select asp-for="MovieForm.Edited" value="@x.Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Lent">Lent To:</label>
        <input asp-for="MovieForm.Lent" value="@x.Lent" />
    </div>
    <br />
    <div>
        <label asp-for="MovieForm.Notes">Notes:</label><br />
        <textarea rows="5" maxlength="25" asp-for="MovieForm.Notes" value="@x.Notes"></textarea>
    </div>
    <br /><br />
    <div asp-validation-summary="All"></div>
    <button type="submit" name="movieIdentity" value="@x.MovieId">Submit</button>
</form>
}

